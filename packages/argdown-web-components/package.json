	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tsconfig/svelte": "^5.0.6",
		"@types/node": "^24.10.1",
		"eslint-config-prettier": "^10.1.8",
		"panzoom": "^9.4.3",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"svelte": "^5.43.8",
		"svelte-check": "^4.3.4",
		"typescript": "~5.9.3",
		"vite": "^7.2.4"
