{
  "name": "@argdown/cli",
  "description": "A command line interface for exporting Argdown files to html, dot or json.",
  "keywords": [
    "argumentation",
    "argument mapping",
    "Argdown",
    "Markdown"
  ],
  "engines": {
    "node": ">= 22.11.0"
  },
  "version": "1.7.5",
  "license": "MIT",
  "type": "module",
  "main": "./dist/cli.js",
  "exports": {
    ".": {
      "import": "./dist/cli.js",
      "types": "./dist/cli.d.ts"
    }
  },
  "dependencies": {
    "@argdown/core": "workspace:^",
    "@argdown/markdown-it-plugin": "workspace:^",
    "@argdown/node": "workspace:^",
    "@types/markdown-it": "^14.1.2",
    "@types/yargs": "^17.0.33",
    "import-global": "^1.1.1",
    "markdown-it": "^14.1.0",
    "yargs": "^18.0.0"
  },
  "bin": {
    "argdown": "./dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/argdown/argdown/tree/master/packages/argdown-cli"
  },
  "author": {
    "name": "Christian Voigt",
    "email": "1pxsolidblack@gmail.com"
  },
  "scripts": {
    "deploy": "npm run version:patch && git push --tags origin HEAD:master",
    "build": "npm run clean && tsc",
    "test": "NODE_OPTIONS=--no-deprecation tsc --noEmit && NODE_OPTIONS=--no-deprecation mocha",
    "test:build": "NODE_OPTIONS=--no-deprecation npm run build && NODE_OPTIONS=--no-deprecation mocha",
    "test:custom-process": "NODE_OPTIONS=--no-deprecation mocha --fgrep \"custom process\"",
    "coverage": "NODE_OPTIONS=--no-deprecation nyc mocha --bail",
    "report": "nyc report",
    "prepublishOnly": "npm run-script build",
    "clean": "rimraf \"dist/*\" --glob",
    "version:patch": "npm version patch"
  },
  "readmeFilename": "Readme.md",
  "preferGlobal": true,
  "devDependencies": {
    "@argdown/image-export": "workspace:^",
    "@types/chai": "^5.2.2",
    "@types/chai-fs": "^2.0.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.24",
    "chai": "^4.3.10",
    "chai-fs": "^2.0.0",
    "copyfiles": "^2.2.0",
    "glob": "^11.0.1",
    "intercept-stdout": "^0.1.2",
    "mkdirp": "^3.0.1",
    "mocha": "^11.1.0",
    "nyc": "^17.1.0",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "typedoc": "0.28.14",
    "typescript": "5.9.3"
  },
  "nyc": {
    "include": [
      "dist/**/*.js",
      "dist/**/*.jsx"
    ],
    "extension": [
      ".js",
      ".jsx"
    ],
    "require": [
      "tsx"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "packageManager": "yarn@4.9.4"
}
