    "chai": "^4.3.10",
    "mocha": "11.1.0",
    "rimraf": "^6.0.1",
    "typescript": "5.8.3"
  },
  "dependencies": {
    "@argdown/core": "workspace:^",
    "@argdown/node": "workspace:^",
